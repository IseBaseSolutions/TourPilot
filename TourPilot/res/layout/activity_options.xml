<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OptionsActivity" >

    <TextView
        android:id="@+id/tvOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options" 
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvPinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvOptions"
        android:layout_below="@+id/tvOptions"
        android:layout_marginTop="18dp"
        android:text="@string/pin_code"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etPinCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPinCode"
        android:layout_below="@+id/tvPinCode"
        android:layout_toLeftOf="@+id/cb_SavePin"
        android:ems="10"
        android:inputType="number"
        android:password="true" />

    <CheckBox
        android:id="@+id/cb_SavePin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etPinCode"
        android:layout_alignBottom="@+id/etPinCode"
        android:layout_alignParentRight="true"
        android:text="@string/save_pin_code" />
    
    <TextView
        android:id="@+id/tvServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etPinCode"
        android:layout_below="@+id/etPinCode"
        android:layout_marginTop="30dp"
        android:text="@string/server_ip"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
	<EditText
        android:id="@+id/etServerIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvServer"
        android:layout_below="@+id/tvServer"
        android:ems="10"
        android:hint="@string/input_server_ip"
        android:inputType="text" >

        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/tvPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etServerIP"
        android:layout_below="@+id/etServerIP"
        android:text="@string/server_port"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
   	<EditText
        android:id="@+id/etServerPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPort"
        android:layout_below="@+id/tvPort"
        android:text="@string/standart_port"
        android:ems="10"
        android:inputType="number" />
   	
    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etServerPort"
        android:layout_below="@+id/etServerPort"
        android:text="@string/phone_number"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
   	<EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPhoneNumber"
        android:layout_below="@+id/tvPhoneNumber"
        android:ems="10"
        android:inputType="phone" />

   	<Button
   	    android:id="@+id/btSynchronization"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentBottom="true"
   	    android:layout_alignParentLeft="true"
   	    android:text="@string/synchronization"
   	    android:textAppearance="?android:attr/textAppearanceLarge" 
   	    android:onClick="btStartSyncClick" />
    
</RelativeLayout>