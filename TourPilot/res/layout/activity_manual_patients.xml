<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearElements"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ManualPatientsActivity" >

    <TextView
        android1:id="@+id/tvManualPatientsList"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:text="Patient list manual"
        android1:textAppearance="?android:attr/textAppearanceLarge"
        android1:textSize="@dimen/text_size_big" />

    <ListView
        android1:id="@+id/lvManualPatientsList"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" >
    </ListView>

</LinearLayout>