<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llVerificationView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VerificationActivity" >

    <TextView
        android:id="@+id/tvVerificationText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llVerificationButtons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="top|left"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal|vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/llVerificationButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/tvVerificationText" >

        <Button
            android:id="@+id/btVerificationOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="onClickButtonCancel"
            android:text="@string/no" />

        <Button
            android:id="@+id/btVerificationCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:onClick="onClickButtonOk"
            android:text="@string/yes" />

    </LinearLayout>

</RelativeLayout>