<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llVerificationView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="insideInset"
    android:scrollbars="horizontal|vertical"
    tools:context=".VerificationActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llVerificationButtons"
        android:layout_alignLeft="@+id/llVerificationButtons"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/llVerificationButtons" >

        <TextView
            android:id="@+id/tvVerificationText"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="top|left"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="horizontal|vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/llVerificationButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/btVerificationOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="onClickButtonCancel"
            android:text="@string/verification_cancel" />

        <Button
            android:id="@+id/btVerificationCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:onClick="onClickButtonOk"
            android:text="@string/verification_ok" />
    </LinearLayout>

</RelativeLayout>