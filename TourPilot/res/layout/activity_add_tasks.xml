<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdditionalTasksActivity" >

    <TextView
        android:id="@+id/tvAddTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="ADDITIONALY TASKS LIST"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/llFilter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAddTasks" >

        <TextView
            android:id="@+id/tvFilter"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:text="@string/filter" />

        <EditText
            android:id="@+id/etAddTasksFilter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="15" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvAddTasks"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btSaveAddTask"
        android:layout_alignLeft="@+id/tvAddTasks"
        android:layout_below="@+id/llFilter" >
    </ListView>

    <Button
        android:id="@+id/btSaveAddTask"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lvAddTasks"
        android:layout_alignParentBottom="true"
        android:text="ADD TASKS"
        android:onClick="onSaveAddTasks" />

</RelativeLayout>