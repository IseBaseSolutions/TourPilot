<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearElements"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NotesActivity" >

    <TextView
        android:id="@+id/tvNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit notes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_size_big" />

    <CheckBox
        android:id="@+id/chbConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect with ..."
        android:textSize="@dimen/text_size" />

    <CheckBox
        android:id="@+id/chbMedchanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medications changed"
        android:textSize="@dimen/text_size" />

    <CheckBox
        android:id="@+id/chbPflege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aubrplanmÃ¤bige Pflege"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tvOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other (inquire)"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_size_middle" />

    <EditText
        android:id="@+id/etOther"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ems="10"
        android:focusable="true"
        android:gravity="start"
        android:textSize="@dimen/text_size"
        android:visibility="visible"
        android:drawableTop="@android:color/black"
        android:drawableBottom="@android:color/black"
        android:top="2dp"
        android:background="#72cdf4" >

    </EditText>

    <LinearLayout
        android:id="@+id/linerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.75"
            android:text="Button"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.25"
            android:text="Button"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

</LinearLayout>